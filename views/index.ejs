<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">My Blog</h1>

    
  
    <%  if (locals.content){ %>
  
  
    <!-- Existing posts -->

    <%   for (var i = 0; i < content.length; i++) { %> 
    <div class="post card my-4">

      <div class="card-body">
        
        <h2 class="card-title"><%=  content[i].title %> </h2>
        <p class="card-text"><%= content[i].content %> </p>

        

        <form action="/delete-post" method="get">

          <input type="hidden" name="post_id" value=<%= content[i].id %>>
          <button type="submit" class="btn btn-danger">Delete</button>

        </form>

        <br>

        <form action="/edit-post" method="get">

          <input type="hidden" name="post_id" value=<%= content[i].id%> >
          <button type="submit" class="btn btn-primary">Edit</button>

        </form>

    </div>
  </div>

    <% } %> 

    <div>

      <form action="/create-new-post" method="post">
        <input type="hidden" name="post_id" value="should-be-incremented ">
        <button type="submit" class="btn btn-primary">Create a New Post</button>
      </form>

    </div>

  <%  } else { %>
  
    
      <!-- Existing posts -->
      <div class="post card my-4">
        <div class="card-body">
          
         <h4 style="color: brown;"> Posts are Not available right Now </h4>
  
  
        </div>
      </div>
  
       
  
    <%  } %>

    

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>